<Window x:Class="DataBaseInformationSystem.SoftwareEditingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseInformationSystem"
        x:ClassModifier="internal"
        mc:Ignorable="d"
        Width="350" SizeToContent="Height" ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <StackPanel Margin="5, 0, 5, 0">
            <Label Content="Название"/>
            <TextBox x:Name="nameTextBox" Padding="10" MaxLength="255"/>
            <Label Content="Разработчик"/>
            <ComboBox x:Name="developerComboBox"/>
            <Label Content="Категория"/>
            <ComboBox x:Name="categotyComboBox"/>
        </StackPanel>
        <Button x:Name="doneButton" Content="Готово"/>
    </StackPanel>
</Window>
