<Window x:Class="DataBaseInformationSystem.InstallEditingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseInformationSystem"
        mc:Ignorable="d"
        x:ClassModifier="internal"
        Width="350" SizeToContent="Height" ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <StackPanel Margin="5, 0, 5, 0">
            <Label Content="Кабинеты"/>
            <TextBox x:Name="roomsTextBox"
                     ContextMenu="{x:Null}"
                     CommandManager.PreviewExecuted="TextBox_PreviewExecuted"
                     Padding="10"
                     MaxLength="255"/>
            <Label Content="ПО"/>
            <ComboBox x:Name="softwareComboBox"/>
            <Label Content="Версия"/>
            <TextBox x:Name="versionTextBox"
                     Padding="10"
                     MaxLength="255"/>
            <Label Content="Сотрудник"/>
            <ComboBox x:Name="employeeComboBox"/>
            <Label Content="Дата установки"/>
            <DatePicker x:Name="datePicker"/>
        </StackPanel>
        <Button x:Name="doneButton" Content="Готово"/>
    </StackPanel>
</Window>
